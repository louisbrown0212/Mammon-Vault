  "name": "mammon-core",
  "description": "Treasury reinsurance protocol",
  "version": "0.0.1",
  "author": {
    "name": "Tarun Chitra",
    "url": "https://www.mammon.network"
  },
  "devDependencies": {
    "@balancer-labs/balancer-js": "^1.0.1",
    "@codechecks/client": "^0.1.10",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ethersproject/abi": "^5.4.0",
    "@ethersproject/abstract-signer": "^5.4.0",
    "@ethersproject/bignumber": "^5.4.0",
    "@ethersproject/bytes": "^5.4.0",
    "@ethersproject/providers": "^5.4.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@latest",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@primitivefi/hardhat-dodoc": "^0.1.3",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.1.0",
    "@types/chai": "^4.2.19",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.0",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.8",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.1",
    "hardhat-gas-reporter": "^1.0.4",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.1",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.11",
    "shelljs": "^0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.1.1",
    "typescript": "~4.2.4"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "license": "UNLICENSED",
  "private": true,
  "resolutions": {
    "@ethersproject/abi": "^5.4.0",
    "@ethersproject/wallet": "^5.4.0",
    "@solidity-parser/parser": "^0.13.2",
    "ethers": "^5.4.0"
  },
  "scripts": {
    "clean": "hardhat clean",
    "commit": "git-cz",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "coverage:local": "cross-env HARDHAT_FORK=mainnet HARDHAT_FORK_NUMBER=13000000 hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy:validator": "hardhat deploy:validator",
    "deploy:factory": "hardhat deploy:factory",
    "deploy:vault": "hardhat deploy:vault",
    "deploy": "yarn deploy:validator && yarn deploy:vault",
    "deploy:kovan": "yarn deploy:vault --network kovan",
    "deploy:mainnet": "yarn deploy:vault --network mainnet",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config ./.prettierrc \"**/*.{js,json,md,sol,ts}\"",
    "slither": "slither . --filter-paths \"contracts/dependencies|contracts/mocks\" --exclude solc-version",
    "test:unit": "cross-env TEST_PATH=./test/unit hardhat test",
    "test:integration": "cross-env TEST_PATH=./test/integration HARDHAT_FORK=mainnet HARDHAT_FORK_NUMBER=13000000 hardhat test",
    "test:kovan": "cross-env TEST_PATH=./test/integration HARDHAT_FORK=kovan HARDHAT_FORK_NUMBER=27000000 hardhat test",
    "test": "yarn test:unit && yarn test:integration",
    "gas": "cross-env REPORT_GAS=true hardhat test",
    "size": "cross-env REPORT_SIZE=true hardhat compile",
    "typechain": "hardhat typechain"
  }
}
